generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  chatId        BigInt  @id
  firstName     String
  lastName      String?
  username      String?
  provider      String?
  whitelisted   Boolean @default(false)
  voice         String?
  preferredName String?
  botName       String?
  latitude      Float?
  longitude     Float?
  experimental  Boolean @default(false)
}

model KeyValueMemory {
  id       Int      @id @default(autoincrement())
  chatId   BigInt
  key      String
  value    String
  datetime DateTime @default(now())

  @@unique([chatId, key])
}

model FutureTask {
  id      Int      @id @default(autoincrement())
  chatId  BigInt
  trigger DateTime
  message String
}

model Group {
  chatId      BigInt  @id
  name        String
  whitelisted Boolean @default(false)
}

model Messages {
  id       Int      @id @default(autoincrement())
  chatId   BigInt
  content  String
  type     String   @default("text")
  datetime DateTime @default(now())
  role     String
  from     BigInt   @default(-1)
}

model HennosLink {
  id       Int      @id @default(autoincrement())
  chatId   BigInt   @unique
  link     String   @unique
  datetime DateTime @default(now())
}

model Blacklist {
  chatId   BigInt   @id
  datetime DateTime @default(now())
}

model WorkflowMessage {
  id         Int      @id @default(autoincrement())
  workflowId String
  userId     String
  content    String
  type       String
  datetime   DateTime @default(now())
  role       String
}

model WorkflowSession {
  id                   String                       @id @default(uuid())
  createdAt            DateTime                     @default(now())
  updatedAt            DateTime                     @updatedAt
  activePlatform       String?
  workflowSessionLinks WorkflowSessionLink[]
  mcpservers           ModelContextProtocolServer[]
}

model WorkflowSessionLink {
  id                String          @id @default(uuid())
  workflowSessionId String
  chatId            String
  platform          String
  workflowSession   WorkflowSession @relation(fields: [workflowSessionId], references: [id], onDelete: Cascade)

  @@unique([chatId, platform])
}

model ModelContextProtocolServer {
  id                Int                                 @id @default(autoincrement())
  workflowSessionId String
  name              String
  url               String
  transport         String
  createdAt         DateTime                            @default(now())
  updatedAt         DateTime                            @updatedAt
  workflowSession   WorkflowSession                     @relation(fields: [workflowSessionId], references: [id], onDelete: Cascade)
  mcpserverHeaders  ModelContextProtocolServerHeaders[]

  @@unique([name, workflowSessionId])
}

model ModelContextProtocolServerHeaders {
  id        Int                        @id @default(autoincrement())
  serverId  Int
  key       String
  value     String
  mcpServer ModelContextProtocolServer @relation(fields: [serverId], references: [id], onDelete: Cascade)

  @@unique([serverId, key])
}
