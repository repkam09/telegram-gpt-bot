generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  chatId        BigInt  @id
  firstName     String
  lastName      String?
  username      String?
  provider      String?
  whitelisted   Boolean @default(false)
  voice         String?
  preferredName String?
  botName       String?
  latitude      Float?
  longitude     Float?
  experimental  Boolean @default(false)
}

model KeyValueMemory {
  id       Int      @id @default(autoincrement())
  chatId   BigInt
  key      String
  value    String
  datetime DateTime @default(now())

  @@unique([chatId, key])
}

model Group {
  chatId      BigInt  @id
  name        String
  whitelisted Boolean @default(false)
}

model Messages {
  id       Int      @id @default(autoincrement())
  chatId   BigInt
  content  String
  type     String   @default("text")
  datetime DateTime @default(now())
  role     String
}

model Blacklist {
  chatId   BigInt   @id
  datetime DateTime @default(now())
}
