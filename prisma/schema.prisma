generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  chatId        BigInt  @id
  firstName     String
  lastName      String?
  username      String?
  whitelisted   Boolean @default(false)
  voice         String?
  preferredName String?
  botName       String?
  latitude      Float?
  longitude     Float?
}

model Group {
  chatId      BigInt  @id
  name        String
  whitelisted Boolean @default(false)
}

model Messages {
  id       Int      @id @default(autoincrement())
  chatId   BigInt
  content  String
  datetime DateTime @default(now())
  role     String
}

model PairingToken {
  id     String @id @default(uuid())
  chatId BigInt
}
