generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  chatId        BigInt  @id
  firstName     String
  lastName      String?
  username      String?
  provider      String?
  whitelisted   Boolean @default(false)
  voice         String?
  preferredName String?
  botName       String?
  latitude      Float?
  longitude     Float?
  experimental  Boolean @default(false)
}

model Messages {
  id       Int      @id @default(autoincrement())
  chatId   BigInt
  content  String
  type     String   @default("text")
  datetime DateTime @default(now())
  role     String
  from     BigInt   @default(-1)
}

model Blacklist {
  chatId   BigInt   @id
  datetime DateTime @default(now())
}

model WorkflowMessage {
  id         Int      @id @default(autoincrement())
  workflowId String
  name       String
  content    String
  type       String
  datetime   DateTime @default(now())
  role       String
}

model WorkflowChat {
  id String @id @default(cuid())
}
