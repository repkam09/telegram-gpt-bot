{
  "name": "telegram-gpt-bot",
  "version": "2.0.0",
  "description": "Telegram bot powered by various large language models.",
  "main": "src/hennos.js",
  "scripts": {
    "clean": "rimraf ./build",
    "build": "npm-run-all clean prisma:generate lint tsc:emit",
    "validate": "npm-run-all lint tsc:noemit",
    "tsc:emit": "tsc",
    "tsc:noemit": "tsc --noEmit",
    "tsc:noemit:watch": "tsc --noEmit --watch",
    "lint": "eslint --fix .",
    "start": "npm run migrate:deploy && node build/hennos.js",
    "start:cli": "node build/client/cli.js",
    "script:email": "npm run build && node build/scripts/email.js",
    "script:bsky": "npm run build && node build/scripts/bsky.js",
    "script:token": "npm run build && node build/scripts/token.js",
    "migrate:deploy": "prisma migrate deploy",
    "migrate:reset": "prisma migrate reset",
    "migrate:new": "prisma migrate dev --create-only",
    "prisma:generate": "prisma generate",
    "dev": "npm-run-all build start",
    "test": "vitest run"
  },
  "author": "Mark Repka",
  "license": "MIT",
  "engines": {
    "node": ">=24.0.0"
  },
  "dependencies": {
    "@a2a-js/sdk": "^0.3.10",
    "@anthropic-ai/sdk": "^0.73.0",
    "@asteasolutions/zod-to-openapi": "^8.4.1",
    "@atproto/api": "^0.19.0",
    "@axiomhq/pino": "^1.4.0",
    "@llamaindex/openai": "^0.4.22",
    "@llamaindex/readers": "^3.1.21",
    "@modelcontextprotocol/sdk": "^1.27.0",
    "@mozilla/readability": "^0.6.0",
    "@prisma/client": "^6",
    "@slack/bolt": "^4.6.0",
    "@slack/web-api": "^7.14.1",
    "@temporalio/client": "^1.14.1",
    "@temporalio/worker": "^1.14.1",
    "@temporalio/workflow": "^1.14.1",
    "@types/swagger-ui-express": "^4.1.8",
    "@wise-old-man/utils": "^4.0.9",
    "axios": "^1.13.4",
    "discord.js": "^14.25.1",
    "dotenv": "^17.2.4",
    "express": "^5.2.1",
    "google-auth-library": "^10.5.0",
    "googleapis": "^171.4.0",
    "jsdom": "^28.0.0",
    "llamaindex": "^0.12.1",
    "mime-types": "^3.0.2",
    "node-telegram-bot-api": "^0.67.0",
    "ollama": "^0.6.3",
    "openai": "^6.18.0",
    "pino": "^10.3.0",
    "pino-pretty": "^13.1.3",
    "puppeteer": "^24.37.1",
    "sqlite3": "^5.1.7",
    "swagger-ui-express": "^5.0.1",
    "tiktoken": "^1.0.22",
    "ws": "^8.19.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@temporalio/testing": "^1.14.1",
    "@types/express": "^5.0.6",
    "@types/jsdom": "^27.0.0",
    "@types/mime-types": "^3.0.1",
    "@types/node": "^24",
    "@types/node-telegram-bot-api": "^0.64.13",
    "@typescript-eslint/eslint-plugin": "^8",
    "@typescript-eslint/parser": "^8",
    "eslint": "^8",
    "nodemon": "^3.1.11",
    "npm-run-all": "^4.1.5",
    "prisma": "^6",
    "rimraf": "^6.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
